@model IEnumerable<LibraryCenter.Models.Shelf>

@{
    ViewData["Title"] = "LibraryShelves";
}

<h1>מדפי הספרייה</h1>

<p>
    <a asp-action="CreataShelf">צור מדף חדש</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.ActionLink("עריכה", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("ספרים", "BooksShelf", new { id = item.Id }) |
                @Html.ActionLink("מחיקה", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Libraries">חזור לספריות</a>
</div>
